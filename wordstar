// caps_mod4: make capslock generate the mod4 modifier
partial modifier_keys
xkb_symbols "caps_key" {
  key <CAPS> {
    type[Group1]="ONE_LEVEL",
    symbols[Group1] = [ ISO_Level3_Shift ]
  };
  include "level3(modifier_mapping)"
};

// Wordstar keys with caps-q prefix
partial modifier_keys alphanumeric_keys alternate_group
xkb_symbols "qkeys" {
	key <AC02> { [       NoSymbol,       NoSymbol,      leftarrow,      leftarrow ] };
	key <AC03> { [       NoSymbol,       NoSymbol,     rightarrow,     rightarrow ] };
};
