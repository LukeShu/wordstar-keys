// caps_mod4: make capslock generate the mod4 modifier
partial modifier_keys
xkb_symbols "caps_key" {
  key <CAPS> {
    type[Group1]="ONE_LEVEL",
    symbols[Group1] = [ ISO_Level3_Shift ]
  };
  include "level3(modifier_mapping)"
};

// Wordstar keys with caps-q prefix
partial modifier_keys alphanumeric_keys
xkb_symbols "qkeys" {
    key.type[Group1] = "FOUR_LEVEL";
	key <AC02> { [ NoSymbol, NoSymbol, Right, Left ] };
	key <AC03> { [ NoSymbol, NoSymbol, Right, Right ] };
	key <AD03> { [ NoSymbol, NoSymbol, Up, Up ] };
	key <AB02> { [ NoSymbol, NoSymbol, Down, Down ] };
};
